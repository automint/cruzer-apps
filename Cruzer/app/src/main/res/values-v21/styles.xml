<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:colorButtonNormal">@color/cruzer_blue_primary</item>
        <item name="android:windowActionModeOverlay">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowSharedElementEnterTransition">@transition/change_transform_sharedelemets</item>
        <item name="android:windowSharedElementExitTransition">@transition/change_transform_sharedelemets</item>

        <item name="colorButtonNormal">@color/cruzer_blue_primary</item>
    </style>

    <style name="AppTheme.Launcher" parent="AppTheme">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="colorAccent">@color/cruzer_blue_accent</item>
    </style>

    <style name="AppTheme.HelpScreen" parent="AppTheme">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="colorAccent">@color/grey_900</item>
        <item name="android:colorButtonNormal">@color/grey_800</item>

        <item name="colorButtonNormal">@color/grey_800</item>
    </style>

    <style name="AppTheme.History" parent="AppTheme">
        <item name="colorPrimary">@color/cruzer_blue_primary</item>
        <item name="colorPrimaryDark">@color/cruzer_blue_primary_dark</item>
        <item name="colorAccent">@color/cruzer_blue_accent</item>
        <item name="drawerArrowStyle">@style/WhiteDrawerToggle</item>
    </style>

    <style name="AppTheme.Vehicles" parent="AppTheme">
        <item name="colorPrimary">@color/cruzer_blue_primary</item>
        <item name="colorPrimaryDark">@color/cruzer_blue_primary_dark</item>
        <item name="colorAccent">@color/cruzer_blue_accent</item>
        <item name="drawerArrowStyle">@style/WhiteDrawerToggle</item>
    </style>

    <style name="AppTheme.Create" parent="AppTheme">
        <item name="colorPrimary">@color/cruzer_blue_primary</item>
        <item name="colorPrimaryDark">@color/cruzer_blue_primary_dark</item>
        <item name="colorAccent">@color/cruzer_blue_accent</item>
        <item name="drawerArrowStyle">@style/WhiteDrawerToggle</item>
    </style>

    <style name="AppTheme.Retrieve" parent="AppTheme">
        <item name="colorPrimary">@color/cruzer_blue_primary</item>
        <item name="colorPrimaryDark">@color/cruzer_blue_primary_dark</item>
        <item name="colorAccent">@color/cruzer_blue_accent</item>
        <item name="drawerArrowStyle">@style/WhiteDrawerToggle</item>
    </style>

    <style name="AppTheme.Update" parent="AppTheme">
        <item name="colorPrimary">@color/cruzer_blue_primary</item>
        <item name="colorPrimaryDark">@color/cruzer_blue_primary_dark</item>
        <item name="colorAccent">@color/cruzer_blue_accent</item>
        <item name="drawerArrowStyle">@style/WhiteDrawerToggle</item>
    </style>

    <style name="AppTheme.WorkshopLocator" parent="AppTheme">
        <item name="colorPrimary">@color/cruzer_blue_primary</item>
        <item name="colorPrimaryDark">@color/cruzer_blue_primary_dark</item>
        <item name="colorAccent">@color/cruzer_blue_accent</item>
        <item name="drawerArrowStyle">@style/WhiteDrawerToggle</item>
    </style>

    <style name="AppTheme.Refuel" parent="AppTheme">
        <item name="colorPrimary">@color/refuel_primary</item>
        <item name="colorPrimaryDark">@color/refuel_primary_dark</item>
        <item name="colorAccent">@color/red_600</item>
    </style>

    <style name="AppTheme.Service" parent="AppTheme">
        <item name="colorPrimary">@color/service_primary</item>
        <item name="colorPrimaryDark">@color/service_primary_dark</item>
        <item name="colorAccent">@color/red_600</item>
    </style>

    <style name="AppTheme.Insurance" parent="AppTheme">
        <item name="colorPrimary">@color/insurance_primary</item>
        <item name="colorPrimaryDark">@color/insurance_primary_dark</item>
        <item name="colorAccent">@color/cruzer_blue_accent</item>
    </style>

    <style name="AppTheme.PUC" parent="AppTheme">
        <item name="colorPrimary">@color/puc_primary</item>
        <item name="colorPrimaryDark">@color/puc_primary_dark</item>
        <item name="colorAccent">@color/cruzer_blue_accent</item>
    </style>

    <style name="AppTheme.PayTm" parent="AppTheme">
        <item name="colorPrimary">@color/paytm_primary</item>
        <item name="colorPrimaryDark">@color/paytm_primary_dark</item>
        <item name="colorAccent">@color/cruzer_blue_primary</item>
    </style>

    <style name="AppTheme.PayTm.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowAnimationStyle">@style/AppTheme.PayTmDialogAnimation</item>
        <item name="android:colorButtonNormal">@color/facebook</item>

        <item name="colorButtonNormal">@color/facebook</item>
    </style>

    <style name="AppTheme.PayTmDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_from_top</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="WhiteDrawerToggle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>

</resources>
