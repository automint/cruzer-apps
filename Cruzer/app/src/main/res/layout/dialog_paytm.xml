<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="220dp"
    android:layout_gravity="center">

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="300dp"
        android:layout_height="124dp"
        android:layout_gravity="top"
        android:src="@drawable/paytm_dialog_cover"/>

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="80dp"
        android:layout_height="78dp"
        android:layout_marginTop="86dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/paytm_dialog_pp"/>

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/message_paytm"
        android:layout_marginBottom="18dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_gravity="bottom|end"
        android:textColor="@color/grey_800"
        android:textAppearance="?android:attr/textAppearanceSmall"/>

    <android.support.v7.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:id="@+id/button_paytm_like"
        android:layout_gravity="end|center"
        android:layout_marginTop="14dp"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:drawableRight="@drawable/ic_facebook_like"
        android:drawableEnd="@drawable/ic_facebook_like"
        android:drawablePadding="10dp"
        android:textSize="12sp"
        android:text="@string/paytm_like_us"
        android:textColor="@android:color/white"
        android:textAppearance="?android:attr/textAppearanceSmall"/>

</android.support.v7.widget.CardView>