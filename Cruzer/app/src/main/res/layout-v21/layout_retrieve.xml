<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.ContentFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_darken_1"
    tools:context="com.socketmint.cruzer.crud.Retrieve">

    <android.support.v7.widget.LinearLayoutCompat android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toolbar"
            app:borderWidth="0dp"
            android:elevation="4dp"
            android:background="@android:color/white"
            android:paddingTop="16dp">

            <android.support.v7.widget.LinearLayoutCompat android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical">

                <android.support.v7.widget.AppCompatImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/button_back"
                    android:layout_gravity="center_vertical"
                    android:paddingRight="16dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_keyboard_backspace_black_24dp"
                    android:tint="@color/dark_v1"/>

                <android.support.v7.widget.LinearLayoutCompat android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="end">

                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txt_retrieve_type"
                        android:text="@string/app_name"
                        android:fontFamily="sans-serif-medium"
                        android:layout_gravity="center"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"/>

                    <android.support.v7.widget.AppCompatImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:id="@+id/button_delete"
                        android:background="@drawable/transparent_button"
                        android:src="@drawable/ic_delete_black_24dp"
                        android:tint="@color/red_600"/>

                </android.support.v7.widget.LinearLayoutCompat>

            </android.support.v7.widget.LinearLayoutCompat>

        </android.support.v7.widget.Toolbar>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.LinearLayoutCompat android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/layout_retrieve_main">

                    <android.support.v7.widget.LinearLayoutCompat android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="20dp">

                        <android.support.v7.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/txt_retrieve_vehicle"
                            android:text="@string/app_name"
                            android:textAppearance="?android:attr/textAppearanceMedium"/>

                        <android.support.v7.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/txt_retrieve_sub_title"
                            android:fontFamily="sans-serif-light"
                            android:layout_marginTop="6dp"
                            android:text="@string/app_name"
                            android:textAppearance="?android:attr/textAppearanceSmall"/>

                    </android.support.v7.widget.LinearLayoutCompat>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:id="@+id/layout_retrieve_field_1">

                    <android.support.v7.widget.LinearLayoutCompat android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp">

                        <android.support.v7.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/lbl_retrieve_field_1"
                            android:fontFamily="sans-serif-light"
                            android:textStyle="italic"
                            android:text="@string/app_name"
                            android:textAppearance="?android:attr/textAppearanceSmall"/>

                        <android.support.v7.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/txt_retrieve_field_1"
                            android:layout_marginTop="6dp"
                            android:text="@string/app_name"
                            android:textAppearance="?android:attr/textAppearanceMedium"/>

                    </android.support.v7.widget.LinearLayoutCompat>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:id="@+id/layout_retrieve_field_2">

                    <android.support.v7.widget.LinearLayoutCompat android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp">

                        <android.support.v7.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/lbl_retrieve_field_2"
                            android:fontFamily="sans-serif-light"
                            android:textStyle="italic"
                            android:text="@string/app_name"
                            android:textAppearance="?android:attr/textAppearanceSmall"/>

                        <android.support.v7.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/txt_retrieve_field_2"
                            android:layout_marginTop="6dp"
                            android:text="@string/app_name"
                            android:textAppearance="?android:attr/textAppearanceMedium"/>

                    </android.support.v7.widget.LinearLayoutCompat>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:id="@+id/layout_retrieve_field_3">

                    <android.support.v7.widget.LinearLayoutCompat android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp">

                        <android.support.v7.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/lbl_retrieve_field_3"
                            android:fontFamily="sans-serif-light"
                            android:textStyle="italic"
                            android:text="@string/app_name"
                            android:textAppearance="?android:attr/textAppearanceSmall"/>

                        <android.support.v7.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/txt_retrieve_field_3"
                            android:layout_marginTop="6dp"
                            android:text="@string/app_name"
                            android:textAppearance="?android:attr/textAppearanceMedium"/>

                    </android.support.v7.widget.LinearLayoutCompat>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:id="@+id/layout_retrieve_field_4">

                    <android.support.v7.widget.LinearLayoutCompat android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp">

                        <android.support.v7.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/lbl_retrieve_field_4"
                            android:fontFamily="sans-serif-light"
                            android:textStyle="italic"
                            android:text="@string/app_name"
                            android:textAppearance="?android:attr/textAppearanceSmall"/>

                        <android.support.v7.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/txt_retrieve_field_4"
                            android:layout_marginTop="6dp"
                            android:text="@string/app_name"
                            android:textAppearance="?android:attr/textAppearanceMedium"/>

                    </android.support.v7.widget.LinearLayoutCompat>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:id="@+id/layout_retrieve_field_5">

                    <android.support.v7.widget.LinearLayoutCompat android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp">

                        <android.support.v7.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/lbl_retrieve_field_5"
                            android:fontFamily="sans-serif-light"
                            android:textStyle="italic"
                            android:text="@string/app_name"
                            android:textAppearance="?android:attr/textAppearanceSmall"/>

                        <android.support.v7.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/txt_retrieve_field_5"
                            android:layout_marginTop="6dp"
                            android:text="@string/app_name"
                            android:textAppearance="?android:attr/textAppearanceMedium"/>

                    </android.support.v7.widget.LinearLayoutCompat>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:id="@+id/layout_retrieve_field_6">

                    <android.support.v7.widget.LinearLayoutCompat android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp">

                        <android.support.v7.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/lbl_retrieve_field_6"
                            android:fontFamily="sans-serif-light"
                            android:textStyle="italic"
                            android:text="@string/app_name"
                            android:textAppearance="?android:attr/textAppearanceSmall"/>

                        <android.support.v7.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/txt_retrieve_field_6"
                            android:layout_marginTop="6dp"
                            android:text="@string/app_name"
                            android:textAppearance="?android:attr/textAppearanceMedium"/>

                    </android.support.v7.widget.LinearLayoutCompat>

                </android.support.v7.widget.CardView>

            </android.support.v7.widget.LinearLayoutCompat>

        </ScrollView>

    </android.support.v7.widget.LinearLayoutCompat>

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_edit"
            android:layout_gravity="bottom|end"
            android:text="@string/label_edit"
            android:src="@drawable/ic_edit_black_18dp"
            android:tint="@color/white_darken_0"
            app:backgroundTint="@color/green_400"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="30dp"/>

</android.support.v7.widget.ContentFrameLayout>